<h1>To Do Lists</h1>
<hr>
<h2>Create a new list:</h2>

<form action="/lists" method="post">
  <label for="name">Assign a name to your list:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add list</button>
</form>

<hr>
<h2> Add tasks to any list:</h2>

<form action="/tasks" method="post">
  <label for="list_id">Select a List</label>
  <select id='list_id' name='list_id' type='text'>
    <% @lists.each() do |list| %>
      <option value="<%= list.id()%>"> <%= list.name() %> </option>
    <% end %>
  </select>
  <br>

  <label for="description">Description of the task:</label>
  <input id="description" name="description" type="text">

  <button type="submit">Add task</button>
</form>
<hr>

<% if @lists.any?() %>
<h2>Click on a list to see its tasks:</h2>

<ul>
  <% @lists.each do |list| %>
  <li><a href="/lists/<%= list.id() %>"><%= list.name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are no lists yet!</p>
<% end %>
<hr>
