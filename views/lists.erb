<h1>Your Current Lists</h1>

<% if @lists.any?() %>
  <h3>Click on a list to see its tasks:</h3>

  <ul>
    <% @lists.each() do |list| %>
      <li><a href="/lists/<%= list.id()%>"><%= list.name() %></a></li>
    <% end %>
  </ul>

<% else %>
  <p>There are no lists yet!</p>
<% end %>

<p><a href="/lists/<%= @list.id() %>/edit">Edit <%= @list.name() %> list</a></p>
<p><a href="/">Return to Main Page</a></p>
